{
	"version": "2.0.0",
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"lib": [
			"es6",
			"es2015",
			"dom"
		],
		"mapRoot": "",
		"module": "es2015",
		"moduleResolution": "node",
		"rootDirs": [
			"."
		],
		"sourceMap": true,
		"target": "es5",
		"inlineSources": true,
		"stripInternal": true
	},
	"files": [
		"src/index.ts"
	],
	"angularCompilerOptions": {
		"skipTemplateCodegen": true
	}
}
